x0=aperture(:,1);
y=aperture(:,7);
x=[ones(length(x0),1),x0];
w=zeros(length(x0),1);
w=inv(x'*x)*x'*y;
error=zeros(length(x0),1);
error=y-(w'*x')';
sigma=sum(error.^2)/length(x0);
beta=1/sigma;
mu=(w'*x')';
sd=sqrt(sigma);
figure;
gris = [mu+sd;flipdim(mu-sd,1)];
fill([x0; flipdim(x0,1)], gris, [6 6 6]/8, 'EdgeColor', [6 6 6]/8);
hold on;
plot(x0,mu,'r');
hold on;
scatter(x0, y);
